
@{
     
    Layout = "~/Areas/EChartsDemo/Views/Shared/_EchartsCommonJS.cshtml";
}

<title>蛛网图</title>
<script>
    $(function () {
        $('#container').highcharts({

            chart: {
                polar: true,
                type: 'line'
            },

            title: {
                text: '蛛网图',
                x: -80
            },

            pane: {
                size: '80%'
            },

            xAxis: {
                categories: ['销售', '市场', '开发', '客服', '技术', '管理'],
                tickmarkPlacement: 'on',
                lineWidth: 0
            },

            yAxis: {
                gridLineInterpolation: 'polygon',
                lineWidth: 0,
                min: 0
            },


            legend: {
                align: 'right',
                verticalAlign: 'top',
                y: 70,
                layout: 'vertical'
            },

            series: [{
                name: '列1',
                data: [43000, 19000, 60000, 35000, 17000, 10000],
                pointPlacement: 'on'
            }, {
                name: '列2',
                data: [50000, 39000, 42000, 31000, 26000, 14000],
                pointPlacement: 'on'
            }]

        });
    });
</script>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>

